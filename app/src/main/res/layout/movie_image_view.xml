<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sdvMovieImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@android:color/darker_gray"
        fresco:roundedCornerRadius="2dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clMovieImageViewMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/movie_image_view_menu_background"
        android:padding="4dp">

        <com.like.LikeButton xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lbMovieImageViewFavorite"
            android:layout_width="@dimen/movie_image_view_favorite_button"
            android:layout_height="@dimen/movie_image_view_favorite_button"
            app:icon_size="@dimen/movie_image_view_favorite_button"
            app:icon_type="star"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:layout_width="@dimen/movie_image_view_favorite_button"
            android:layout_height="@dimen/movie_image_view_favorite_button"
            fresco:srcCompat="@drawable/close"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/tvMovieImageViewDetailButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/detail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/movie_image_view_detail_button"
            android:textStyle="bold"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintLeft_toLeftOf="parent"
            fresco:layout_constraintRight_toRightOf="parent"
            fresco:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMovieImageViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/smallest_text_size"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>